<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]  STUDENTS_INFORMATION</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication3.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">STUDENTS_INFORMATION</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item">
                                <a href="@Url.Action("Create", "StudentsBooks")" class="nav-link text-dark" asp-area="">| Create |</a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Index", "StudentsBooks")" class="nav-link text-dark" asp-area="">Back_To_List |</a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Logout", "StudentsBooks")" class="nav-link text-dark" asp-area="">LogOut |</a>
                            </li>
                            <li><a style="margin-left: 850px;">Hello - @User.Identity.Name</a></li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a href="@Url.Action("Create", "StudentsBooks")" class="nav-link text-dark" asp-area="">| Create |</a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Index", "StudentsBooks")" class="nav-link text-dark" asp-area="">Back_To_List|</a>
                            </li>

                        }
                    </ul> 
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WebApplication3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
  
</body>
</html>
